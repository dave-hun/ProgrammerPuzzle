                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/line_7_Score"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/line_8_Player"/>
